<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/standbyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Vous venez de retrouver votre teammate !\nVous pouvez continuer l'aventure ensemble maintenant !\nGardez cette page ouverte , vous serez tout les deux redirigés vers la récompense"
            android:textColor="?attr/texte"
            android:textSize="@dimen/text_size_large"
            android:gravity="center" />
    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>