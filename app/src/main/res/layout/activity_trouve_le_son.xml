<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/bannerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/quitter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="left"
                android:src="@drawable/baseline_close_24"
                android:scaleType="fitCenter"
            app:tint="@android:color/black" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/Tuto"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:alpha="0.5"
                android:backgroundTint="#40FFFFFF"
                android:icon="@drawable/baseline_arrow_drop_down_24"
                android:iconGravity="textEnd"
                android:iconTint="@android:color/black"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Identifiez le son"
                android:textColor="@android:color/black"
                app:iconPadding="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/largeIconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="?attr/colorButtonBackground"
                app:icon="@drawable/baseline_volume_up_24"
                app:iconGravity="textStart"
                app:iconSize="100dp"
                android:padding="16dp"
                android:width="200dp"
                android:height="200dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:iconTint="@color/black"
                app:cornerRadius="30dp"
                android:elevation="10dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_margin="16dp"
            android:padding="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titre de la carte"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="top|center" />
            <TextView
                android:id="@+id/card_text"
                android:layout_width="wrap_content"
                android:layout_height="300dp"

                android:textAlignment="center"
                android:text="Liste d'indices"
                android:textSize="16sp"

                android:textColor="@android:color/black"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="26dp">

            </TextView>
                </LinearLayout>
            />
        </com.google.android.material.card.MaterialCardView>



    </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/blur_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3000000"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>